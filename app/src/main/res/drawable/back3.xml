<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/purple"></solid>
            <stroke android:color="@color/yellow" android:width="2dp"></stroke>
            <padding android:left="6dp" android:right="6dp"></padding>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/yellow"></solid>
            <stroke android:color="@color/purple" android:width="2dp"></stroke>
            <padding android:left="6dp" android:right="6dp"></padding>
        </shape>
    </item>
</selector>